{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": ["config:recommended"],
  "labels": [
    "area/dependency"
  ],
  "packageRules": [
    {
      "automerge": false,
      "matchManagers": [
        "helm-values"
      ],
      "labels": [
        "area/dependency",
        "do-not-merge"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "docker.io/clastix/kamaji"
      ],
      "versioning": "loose"
    }
  ],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "kind/security"
    ]
  },
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ]
}
